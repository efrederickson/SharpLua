--[[
Battle - An advanced class test simulating a battle
]]
math.randomseed(os.time())

player = class:CreateClass()
enemy = class:CreateClass()

-- create the "player"
player.Health = 100
player.MaxHealth = 100
player.Damage = math.random(1, 100)
player.Dead = false
-- get their name
io.write("Name: ")
player.Name = io.read()
function player:Attack()
	dmg = player.Damage
	player.Damage = math.random(1, 100)
	return dmg
end

function player:TakeDamage(dmg)
	player.Health = player.Health - dmg
	if player.Health <= 0 then
		player.Dead = true
	end
end

enemy.Health = 100
enemy.MaxHealth = 100
enemy.Damage = math.random(1, 100)
enemy.Dead = false
enemy.Name = "Larry"
function enemy:Attack()
	dmg = enemy.Damage
	enemy.Damage = math.random(1, 100)
	return dmg
end

function enemy:TakeDamage(dmg)
	enemy.Health = enemy.Health - dmg
	if enemy.Health <= 0 then
		enemy.Dead = true
	end
end
print"Created fighters"
-- END INITIALIZE PLAYER AND ENEMY

while true do
	print(player.Name .. " is attacking: " .. player.Damage .. " damage")
	enemy:TakeDamage(player.Attack())
	if enemy.Dead then
		print("Enemy is dead!")
		break
	end
	print("Enemy health: " .. enemy.Health)
	print(enemy.Name .. " is attacking: " .. enemy.Damage .. " damage")
	player:TakeDamage(enemy.Attack())
	if player.Dead then
		print("Player is dead!")
		break
	end
	print("Player health: " .. player.Health)
end
